{
    "metadata": [
        {
            "allowCompilationErrors": true,
            "src": [
                {
                    "src": "..",
                    "files": [
                        "Assets/Runtime/SplinePlus/API/**/*.cs"
                    ]
                }
            ],
            "globalNamespaceId": "Global",
            "memberLayout": "separatePages",
            "filter": "filterConfig.yml",
            "dest": "api",
            "namespaceLayout": "nested"
        }
    ],
    "build": {
        "globalMetadata": {
            "_appTitle": "Spline Plus documentation",
            "_appFooter": "Spline Plus documentation",
            "_enableSearch": true,
            "_appLogoPath": "Images/Else40.png"
        },
        "content": [
            {
                "files": [
                    "**/*.{md,yml}"
                ]
            }
        ],
        "overwrite": [
            {
                "src": "..",
                "files": [
                    "Assets/Scripts/**/*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "resources/**/*",
                    "Images/*.png",
                    "Images/*.jpeg",
                    "Images/*.ico",
                    "Images/*.gif"
                ]
            }
        ],
        "sitemap": {
            "baseUrl": "https://normanderwan.github.io/DocFxForUnity",
            "changefreq": "weekly",
            "fileOptions": {
                "api/*": {
                    "changefreq": "daily"
                }
            }
        },
        "xref": [
            "https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml"
        ],
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "dest": "../_site",
        "template": [
            "default",
            "templates/ElseForty_Template"
        ]
    }
}